<div class="mx-auto card" style="width:500px">


  <div class="card-body">

    <h2 class="card-title">Log in</h2>

    <div class="card-text">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field mb-3 mt-3">
          <p><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %></p>
        </div>

        <div class="field mb-3">
          <p><%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %></p>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field form-check mb-3">
            <p>
              <%= f.label :remember_me, class: "form-check-label" %>
              <%= f.check_box :remember_me, class: "form-check-input" %>
            <p>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="card-footer">
    <p>
      <%= render "devise/shared/links" %>
    </p>
  </div>
</div>